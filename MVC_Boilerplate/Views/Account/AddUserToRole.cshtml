@{
    ViewData["Title"] = "Dodaj role do użytkownika";
    var user = ViewData["User"] as User;
    var roles =  ViewData["Roles"] as IEnumerable<IdentityRole>;
}

<div class="row justify-content-center">
    <div class="col-md-6 ">

        @using (Html.BeginForm("AddUserToRole", "Account", FormMethod.Post, new { @class = "form-signin" }))
        {
            <div class="text-center mb-4">
                <h1 class="h3 mb-3 font-weight-normal">Dodaj role do użytkownika:</h1>
                <h2>@user.UserName</h2>
            </div>

            @Html.ValidationSummary()

            <input type="hidden" value="@user.Id" name="userId"/>

            <div class="form-group">
                <label for="rolesDropdown">Wybierz rolę</label>
                <select class="form-control" id="rolesDropdown" name="roleId">
                    @foreach (var role in roles)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </select>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Dodaj rolę</button>
        }
    </div>
</div>


