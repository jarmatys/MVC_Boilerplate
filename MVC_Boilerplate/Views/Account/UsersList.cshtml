@model IEnumerable<User>

@{
    ViewData["Title"] = "Lista użytkowników";
}

<div class="jumbotron text-center">
    <div class="container">
        <h1 class="display-4">Lista ról w systemie</h1>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <a class="btn btn-primary" href="@Url.Action("AddRole", "Account")" role="button">Dodaj role</a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Rola</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    foreach (var role in Model)
                    {
                        <tr>
                            <th scope="row">@role.Id</th>
                            <td>@role.Name</td>
                            <td><a class="btn btn-danger btn-sm" href="@Url.Action("DeleteRole", "Account",new { Id = role.Id })" role="button">Usuń</a></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <th colspan="2">Brak ról w systemie</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

